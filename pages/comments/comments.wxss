/* pages/comments/comments.wxss */
.btn {
  margin: 16rpx auto;
  width: 60%;
  padding: 16rpx 8rpx;
  justify-content: center;
  background-color: #99CCFF;
  border-radius: 20rpx;
  color: #3E66D5;
  font-size: 30rpx;
  text-align: center;
}

.btn image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.edit-dialog .container {
  padding: 8rpx 16rpx;
  background-color: #F6F6F6;
}

.edit-dialog .title {
  flex: 1;
  flex-flow: 1;
  padding: 4rpx 0;
  text-align: center;
  color: #333333;
  font-size: 28rpx;
}

.edit-dialog .input {
  width: calc(100% - 32rpx);
  height: 200rpx;
  margin: 16rpx 16rpx;
  padding: 14rpx 14rpx;
  background-color: white;
  border-radius: 16rpx;
  text-align: left;
  color: #333333;
  font-size: 24rpx;
}

.edit-dialog .btn {
  width: 200rpx;
  margin: 16rpx auto;
  text-align: center;
  padding: 8rpx 24rpx;
  background-color: #99CCFF;
  border-radius: 12rpx;
  color: #3E66D5;
  font-size: 24rpx;
}