/* pages/house/community/detail/detail.wxss */

.name-tags {
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.name-tags .left {
  flex-grow: 1;
  align-items: flex-start;
}

.name-tags .left .title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 550;
}

.name-tags .left .tags {
  margin-top: 11rpx;
  flex-wrap: wrap;
}

.name-tags .left .tags .tag {
  text-align: center;
  padding: 4rpx 16rpx;
  margin-top: 11rpx;
  min-width: 104rpx;
  margin-right: 16rpx;
  border-radius: 30rpx;
  font-size: 20rpx;
}

.name-tags .right {
  margin-left: 20rpx;
  min-width: 100rpx;
  color: #666666;
  font-size: 20rpx;
}

.name-tags .right image {
  width: 40rpx;
  height: 32rpx;
}

.addr {
  color: #999999;
  font-size: 20rpx;
  margin-top: 26rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  flex-wrap: wrap;
}

.addr image {
  width: 14rpx;
  height: 16rpx;
}

.addr .arrow {
  width: 12rpx;
  height: 20rpx;
  margin-left: 14rpx;
}

.prices {
  margin-top: 30rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-bottom: 20rpx;
}

.prices .item {
  flex: 1;
  flex-grow: 1;
  padding: 22rpx 14rpx;
  background-color: #99CCFF;
  border-radius: 20rpx;
}

.prices .item .bigtext {
  color: #3E66D5;
  font-size: 30rpx;
}

.prices .item .middletext {
  color: #3E66D5;
  font-size: 20rpx;
}

.prices .item .greytext {
  color: #777777;
  font-size: 20rpx;
  margin-left: 8rpx;
}

.brief {
  padding: 30rpx 28rpx;
}

.brief .title {
  color: #333333;
  font-size: 32rpx;
}

.brief .item {
  margin-top: 8rpx;
  width: 100%;
}

.brief .left {
  flex: 2;
}

.brief .right {
  flex: 1;
  margin-left: 20rpx;
}

.brief .label {
  color: #999999;
  font-size: 26rpx;
}

.brief .value {
  color: #666666;
  font-size: 26rpx;
  margin-left: 6rpx;
}

.hottopic {
  padding: 26rpx 28rpx;
  color: #666666;
  font-size: 26rpx;
}

.hottopic image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.bottom {
  padding: 18rpx 28rpx;
  background-color: white;
}

.bottom .comment {
  color: #666666;
  font-size: 20rpx;
}

.bottom .comment image {
  width: 40rpx;
  height: 40rpx;
}

.bottom .attention {
  margin-left: 60rpx;
  color: #666666;
  font-size: 20rpx;
}

.bottom .attention image {
  width: 40rpx;
  height: 36rpx;
}

.bottom .btn {
  flex: 1;
  flex-grow: 1;
  justify-content: center;
  padding: 16rpx 8rpx;
  margin-left: 60rpx;
  background-color: #99CCFF;
  border-radius: 20rpx;
  color: #3E66D5;
  font-size: 30rpx;
}

.bottom .btn image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.divid-margin {
  width: calc(100% - 56rpx);
  height: 2rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  background-color: #F6F6F6;
}

.more-comments {
  color: #3E66D5;
  font-size: 22rpx;
  padding: 32rpx 0;
  text-align: center;
}

.edit-dialog .container {
  padding: 8rpx 16rpx;
  background-color: #F6F6F6;
}

.edit-dialog .title {
  flex: 1;
  flex-flow: 1;
  padding: 4rpx 0;
  text-align: center;
  color: #333333;
  font-size: 28rpx;
}

.edit-dialog .input {
  width: calc(100% - 32rpx);
  height: 200rpx;
  margin: 16rpx 16rpx;
  padding: 14rpx 14rpx;
  background-color: white;
  border-radius: 16rpx;
  text-align: left;
  color: #333333;
  font-size: 24rpx;
}

.edit-dialog .btn {
  width: 200rpx;
  margin: 16rpx auto;
  text-align: center;
  padding: 8rpx 24rpx;
  background-color: #99CCFF;
  border-radius: 12rpx;
  color: #3E66D5;
  font-size: 24rpx;
}

.more-recommend {
  width: 100%;
  padding: 28rpx 28rpx;
}

.more-recommend .title {
  color: #333333;
  font-size: 32rpx;
  margin-bottom: 28rpx;
}