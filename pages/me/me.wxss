/* pages/me/me.wxss */

.login-btn {
  color: #333333;
  font-weight: 400;
  margin: 0;
  padding-left: 16rpx !important;
  padding-right: 16rpx !important;
  font-size: 22rpx !important;
  border-radius: 12rpx;
}

.top-container {
  width: 100%;
  height: 300rpx;
  padding-top: 56rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
}

.top-container .avatar {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.top-container .name {
  margin-left: 36rpx;
  font-size: 32rpx;
  color: white;
}

.top-container .setting {
  border-style: solid;
  border-width: 2rpx;
  border-color: white;
  border-radius: 16rpx;
  padding: 4rpx 12rpx;
  margin-left: 12rpx;
  color: #FEFEFF;
  font-size: 16rpx;
}

.top-container .setting image {
  width: 18rpx;
  height: 18rpx;
}

.float-bar-container {
  width: 100%;
  padding: 0 28rpx;
  position: absolute;
  top: 216rpx;
}

.float-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 42rpx;
  border-radius: 16rpx;
  background-color: white;
  box-shadow: 0 0 30rpx #13368466;
}

.float-bar image {
  width: 40rpx;
  height: 40rpx;
}

.float-bar .text {
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #666666;
}

.list {
  padding: 36rpx 40rpx;
}

.list .label {
  margin-left: 16rpx;
  color: #666666;
  font-size: 20rpx;
}

.line {
  height: 2rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background-color: #f6f6f6;
}

.switch {
  transform: scale(0.7, 0.7);
}

.switch::after {
	content: "";
}

.switch::before {
	content: "";
}