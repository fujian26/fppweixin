.search-out {
  padding: 14rpx 28rpx;
  background-color: #3E66D5;
}

.search-out image {
  width: 22rpx;
  height: 24rpx;
}

.search-out .location {
  margin-left: 12rpx;
  margin-right: 30rpx;
  color: white;
  font-size: 32rpx;
}

.tabs {
  padding: 0;
  margin: 0;
  background-color: white;
}

.tabs .tab {
  flex: 1;
  flex-grow: 1;
  padding: 0;
  margin: 0;
  margin-top: 34rpx;
  text-align: center;
  color: #666666;
  font-size: 30rpx;
}

.tabs .selected-tab {
  color: #3E66D5 !important;
}

.tabs .line {
  margin: 0 auto;
  width: 30%;
  height: 5rpx;
  margin-top: 28rpx;
  background-color: white;
}

.tabs .selected-line {
  background-color: #3E66D5;
}

.divid {
  width: 100%;
  height: 14rpx;
  background-color: #f6f6f6;
}

.tab-page {
  padding: 0;
  margin: 0;
  padding-left: 28rpx;
  padding-right: 28rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
}