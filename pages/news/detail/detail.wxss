/* pages/news/detail/detail.wxss */
.title {
  margin-top: 26rpx;
  margin-bottom: 34rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  text-align: left;
  color: #333333;
  font-size: 30rpx;
}

.watch-num {
  margin-left: 4rpx;
  color: #999999;
  font-size: 20rpx;
}

.time-text {
  flex: 1;
  flex-grow: 1;
  margin: 0;
  margin-left: 64rpx;
  color: #999999;
  font-size: 20rpx;
  text-align: right;
}

.time-text span {
  color: #3E66D5;
  padding: 0;
  margin: 0;
  font-size: 20rpx;
}

.line {
  margin-top: 12rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 36rpx;
  width: calc(100% - 60rpx);
  height: 2rpx;
  background-color: #E5E5E5;
}

.html-content {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: calc(100% - 60rpx) !important;
}

.comments-tip {
  align-items: baseline;
  justify-content: flex-start;
  padding-top: 38rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.comments-tip .title {
  color: #333333;
  font-size: 32rpx;
  padding: 0 0;
  margin: 0 0;
  width: auto;
}

.comments-tip .num {
  color: #666666;
  font-size: 24rpx;
  margin: 0 0;
  padding: 0 0;
  width: auto;
  margin-left: 6rpx;
}

.comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 28rpx;
  margin-right: 28rpx;
  padding-top: 34rpx;
}

.comments .item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.comments .item image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.comments .item .content {
  flex: 1;
  flex-grow: 1;
  padding: 0;
  margin: 0;
  margin-left: 16rpx;
}

.comments .item .content .name {
  color: #333333;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
}

.comments .item .content .label {
  color: #666666;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
  margin-top: 10rpx;
}

.comments .line {
  width: 100%;
  height: 2rpx;
  padding: 0;
  margin: 0;
  margin-top: 34rpx;
  background-color: #E5E5E5;
}

.edit-dialog .container {
  padding: 8rpx 16rpx;
  background-color: #F6F6F6;
}

.edit-dialog .title {
  flex: 1;
  flex-flow: 1;
  padding: 4rpx 0;
  text-align: center;
  color: #333333;
  font-size: 28rpx;
}

.edit-dialog .input {
  width: calc(100% - 32rpx);
  height: 200rpx;
  margin: 16rpx 16rpx;
  padding: 14rpx 14rpx;
  background-color: white;
  border-radius: 16rpx;
  text-align: left;
  color: #333333;
  font-size: 24rpx;
}

.edit-dialog .btn {
  width: 200rpx;
  margin: 16rpx auto;
  text-align: center;
  padding: 8rpx 24rpx;
  background-color: #99CCFF;
  border-radius: 12rpx;
  color: #3E66D5;
  font-size: 24rpx;
}

.btn {
  margin: 32rpx auto;
  width: 60%;
  padding: 16rpx 8rpx;
  justify-content: center;
  background-color: #99CCFF;
  border-radius: 20rpx;
  color: #3E66D5;
  font-size: 30rpx;
  text-align: center;
}

.btn image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}