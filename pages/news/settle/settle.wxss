/* pages/news/settle/settle.wxss */
.title {
  margin-top: 26rpx;
  margin-bottom: 34rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  text-align: center;
  color: #333333;
  font-size: 30rpx;
}

.watch-num {
  margin-left: 4rpx;
  color: #999999;
  font-size: 20rpx;
}

.from-text {
  color: #666666;
  font-size: 20rpx;
}

.time-text {
  color: #999999;
  font-size: 20rpx;
}

.line {
  margin-top: 12rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 36rpx;
  width: calc(100% - 60rpx);
  height: 2rpx;
  background-color: #E5E5E5;
}

.html-content {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: calc(100% - 60rpx) !important;
}

.dialog {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dialog .line {
  width: 40rpx;
  height: 5rpx;
  background-color: #999999;
}

.dialog .item {
  width: 100%;
  padding-top: 14rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  color: #333333;
  font-size: 26rpx;  
}

.dialog .highlight {
  color: #3E66D5;
}

.dialog .item .line {
  width: 100%;
  height: 2rpx;
  background-color: #E5E5E5;
  margin-top: 40rpx;
}