/* pages/school/search/search.wxss */
.top-search {
  padding: 14rpx 28rpx;
  background-color: #3E66D5;
}

.top-search image {
  width: 22rpx;
  height: 24rpx;
}

.top-search .name {
  margin-left: 12rpx;
  color: white;
  font-size: 32rpx;
}

.top-search .search {
  flex: 1;
  padding: 14rpx 32rpx;
  min-height: 56rpx;
  height: 60rpx;
  margin-left: 28rpx;
  background-color: white;
}

.tabbar {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 8rpx;
  background-color: white;
}

.tabbar .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tabbar .item .name {  
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;    
  font-size: 26rpx;
  color: #666666;
}

.tabbar .item .line {
  height: 4rpx;
  width: 80%;
  background-color: #3E66D5;
}

/* 广告 */
.ad {  
  width: 100%;
  height: 130rpx;
  margin: 12rpx 0;
  background-color: tomato;
}

.school {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}

.school .item {
  display: flex;
  flex-direction: column;
  padding-top: 28rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.school .item .content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.school .item .content image {
  width: 200rpx;
  height: 160rpx;  
}