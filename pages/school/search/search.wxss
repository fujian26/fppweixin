/* pages/school/search/search.wxss */

.hole {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0rpx 0rpx;
  margin: 0rpx 0rpx;
  background-color: white;
}

.top-search {
  padding: 14rpx 28rpx;
  background-color: #3E66D5;
}

.top-search image {
  width: 22rpx;
  height: 24rpx;
}

.top-search .name {
  margin-left: 12rpx;
  margin-right: 30rpx;
  color: white;
  font-size: 32rpx;
}

.tabbar {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 8rpx;
  background-color: white;  
}

.tabbar .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tabbar .item .name {
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
}

.tabbar .item .line {
  height: 4rpx;
  width: 80%;
  background-color: #3E66D5;
}

/* 广告 */
.ad {
  width: 100%;
  height: 130rpx;
  margin: 12rpx 0;
  background-color: tomato;
}

.school {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;  
}

.school .item {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 36rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.school .item .content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.school .item .content image {
  width: 200rpx;
  height: 160rpx;
  border-radius: 16rpx;
}

.school .item .content .tag {
  width: 72rpx;
  height: 24rpx;
  position: absolute;
  left: 36rpx;
}

.school .item .content .name {
  color: #333333;
  font-size: 32rpx;
}

.school .item .content .label {
  width: 100%;
  margin-top: 10rpx;
  color: #666666;
  font-size: 20rpx;
}

.school .item .content .addr {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.school .item .content .location {
  margin-left: 8rpx;
  color: #cccccc;
  font-size: 16rpx;
}

.school .item .line {
  width: 100%;
  height: 2rpx;
  margin-top: 32rpx;
  background-color: #E6E6E6;
}