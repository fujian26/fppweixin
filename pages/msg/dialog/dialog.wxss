/* pages/msg/dialog/dialog.wxss */
.sv {
  padding: 26rpx;
  margin: 0;
  background-color: #F6F6F6;
}

.divid {
  background-color: #E5E5E5;
  width: 100%;
  height: 2rpx;
}

.input-panel {
  width: 100%;
  height: 120rpx;
  padding: 20rpx 26rpx;
  padding-bottom: 40rpx;
  margin: 0;
  background-color: #F6F6F6;
}

.input-panel .icon {
  width: 50rpx;
  height: 50rpx;
}

.input-panel .recordTip {
  flex: 1;
  flex-grow: 1;
  color: #333333;
  font-size: 24rpx;
  background-color: #F6F6F6;
  border-radius: 10rpx;
  border-color: #aaaaaa;
  border-style: solid;
  border-width: 1rpx;
  text-align: center;
  padding: 12rpx 20rpx;
  margin: 0 20rpx;
}

.input-panel .input {
  margin: 0 20rpx;
  height: 60rpx;
  color: #333333;
  font-size: 24rpx;
  flex: 1;
  flex-grow: 1;
  padding: 4rpx 10rpx;
  background-color: white;
  border-radius: 10rpx;
}

.input-panel .btn {
  margin-left: 20rpx;
  color: white;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background-color: #3E66D5;
  border-radius: 10rpx;
}

.recording-dialog {
  background-color: transparent;
}

.mic-container {
  padding: 40rpx;
  width: 260rpx;
  margin: auto auto;
  background-color: rgba(153, 153, 153, 0.8);
  border-radius: 12rpx;
}

.mic-container .text {
  color: #333333;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
  margin-top: 20rpx;
}

.mic {
  width: 100rpx;
  height: 100rpx;
}

.more-panel {
  margin: 0;
  /* margin-top: -20rpx; */
  padding: 32rpx;
  height: 160rpx;
  background-color: #F6F6F6;
}

.more-panel .item {
  color: #333333;
  font-size: 20rpx;
  text-align: center;
  padding: 20rpx 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #cccccc;
  margin: 0;
  margin-right: 24rpx;
  border-radius: 12rpx;
}