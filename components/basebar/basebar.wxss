/* components/basebar/basebar.wxss */
.statusbar {
  width: 100%;  
}

.tabbar {
  width: 100%;  
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;  
}

.tabbar .left {  
  font-size: 36rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.tabbar .right {  
  font-size: 36rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.tabbar .center {
  flex: 1;
  flex-grow: 1;
  margin-right: 32rpx;
  text-align: center;
  font-size: 30rpx;
}