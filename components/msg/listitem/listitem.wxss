/* components/msg/listitem/listitem.wxss */
.item {
  margin: 0;
  padding: 0;
  padding-top: 20rpx;
}

.item .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.item .right {
  flex: 1;
  flex-grow: 1;
  margin-left: 26rpx;
}

.right .title {
  flex: 1;
  flex-grow: 1;
  color: #333333;
  font-size: 30rpx;
}

.right .time {
  color: #999999;
  font-size: 22rpx;
}

.right .content {
  flex: 1;
  flex-grow: 1;
  color: #999999;
  font-size: 26rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.right .redpoint {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #FF3333;
}

.divid {
  background-color: #E8E8E8;
  width: calc(100% - 116rpx);
  margin-left: 116rpx;
  height: 2rpx;
  margin-top: 20rpx;
}