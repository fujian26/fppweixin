/* components/comments/item/item.wxss */
.item {
  width: 100%;
  padding-bottom: 34rpx;
  background-color: white;
}

.item .divid {
  width: 100%;
  height: 2rpx;
  margin-bottom: 28rpx;
  background-color: #F6F6F6;
}

.item image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.item .right {
  flex: 1;
  flex-grow: 1;
  margin-left: 16rpx;
}

.item .name {
  color: #333333;
  font-size: 26rpx;
}

.item .content {
  margin-top: 10rpx;
  color: #666666;
  font-size: 26rpx;
}