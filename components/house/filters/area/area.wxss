/* components/house/filters/area/area.wxss */
.container {
  width: 100%;
  height: 440rpx;
  align-items: flex-start;
  padding: 0;
  margin: 0;
  background-color: white;
}

.container .left {
  width: auto;
  height: 100%;
  background-color: #f6f6f6;
}

.container .left .area {
  color: #333333;
  font-size: 26rpx;
  padding: 16rpx 24rpx;
  padding-right: 56rpx;
  margin: 0;
}

.container .left .selected {
  background-color: white;
}

.container .right {
  flex: 1;
  flex-grow: 1;
  height: 100%;
  background-color: white;
}

.container .right .street {
  width: 100%;
  color: #333333;
  font-size: 26rpx;
  padding: 16rpx 24rpx;
  margin: 0;
}

.container .right .street .check {
  color: #3E66D5;
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

.container .right .selected {
  color: #3E66D5;
}

.divid {
  width: 100%;
  height: 2rpx;
  background-color: #f6f6f6;
}

.btn-container {
  background-color: white;
}

.btn-container .btn {
  width: 50%;
  margin: 32rpx auto;
  padding: 16rpx 16rpx;
  text-align: center;
  background-color: #3E66D5;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
}